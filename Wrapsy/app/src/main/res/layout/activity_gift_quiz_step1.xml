<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiftQuizStep1Activity"
    android:orientation="vertical"
    android:background="@color/cremaPalido"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icono_wrapsy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All the information you provide is protected,\nand only you and your friends will be able to see it."
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete it in just 3 steps!"
            android:textStyle="bold"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you prefer?"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnPreference1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/verdePastelSuave"
            app:cornerRadius="8dp"
            android:text="A gift you can use frequently"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnPreference2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/verdePastelSuave"
            app:cornerRadius="8dp"
            android:text="A special gift for specific occasions"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnPreference3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/verdePastelSuave"
            app:cornerRadius="8dp"
            android:text="A memorable experience"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btnPreference4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/verdePastelSuave"
            app:cornerRadius="8dp"
            android:text="Something personalized and unique"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/amarilloClaroPastel"
            app:cornerRadius="8dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/verdeOlivaGrisaceo"
            app:cornerRadius="8dp"
            android:text="Next 1/3"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>



</LinearLayout>