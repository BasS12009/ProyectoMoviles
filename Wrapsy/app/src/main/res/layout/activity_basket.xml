<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cremaPalido"
    tools:context=".BasketActivity">

    <!-- Barra superior con iconos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/basketIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:background="@drawable/circleyellow"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_shopping_basket"
            android:contentDescription="Shopping basket" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circleyellow"
            android:src="@drawable/ic_notificaciones"
            android:contentDescription="Notifications" />

        <ImageView
            android:id="@+id/options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:layout_toStartOf="@id/menuIcon"
            android:layout_centerVertical="true"
            android:background="@drawable/circleyellow"
            android:src="@drawable/ic_tres_rayitas"
            android:contentDescription="Menu" />
    </RelativeLayout>

    <!-- Contenedor principal de contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Logo y título -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="Logo"
                android:src="@drawable/ic_wrapsy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Basket"
                android:textColor="@color/dark_green"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- GridView para mostrar productos -->
        <GridView
            android:id="@+id/basket_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:scrollbars="vertical" />

        <!-- Botón de pago -->
        <Button
            android:id="@+id/btn_pay_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay for the order"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/verdeOlivaGrisaceo"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Barra de navegación inferior -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>